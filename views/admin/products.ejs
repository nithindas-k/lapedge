<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/products.css">
</head>

<body>
    <div class="main-div">
        <%- include("../partials/adminNavbar") %>
        <div class="hello">
            <%- include('../partials/adminSidebar') %>
        </div>

        <div class="containerProduct">
            <div class="header">
                <h1>Product List</h1>
                <form action="/admin/products" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Search Products" value="<%= searchQuery %>">
                    <button type="submit">Search</button>
                </form>
                <a href="/products/add" class="add-product-button">Add Product</a>
                
            </div>

            <table class="product-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Sale Price</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>List Status</th>
                        <th>Edit</th>
                        <th>View</th>
                        <th>List</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product, index) => { %>
                        <tr>
                     
                            <td><%= index + 1 %></td>
                
                        
                            <td><%= product.category.name %></td>
                
                            <td>
                                <img 
                                    src="<%= product.productImage[0] %>" 
                                    alt="<%= product.name %>" 
                                    width="50">
                            </td>
                
                       
                            <td><%= product.name %></td>
                
                   
                            <td>â‚¹<%= product.salePrice %></td>
                
                           
                            <td><%= product.quantity %></td>
                
                       
                            <td><%= product.status %></td>
                
                            
                            <td><%= product.isBlocked ? 'Unlisted' : 'Listed' %></td>
                
                   
                            <td>
                                <a href="/products/update/<%= product._id %>">
                                    <button 
                                        style="width: 70px; border: 1px solid rgb(0, 155, 0); color: rgb(0, 162, 0);"
                                        class="edit-button">
                                        Edit
                                    </button>
                                </a>
                            </td>
                
                    
                            <td>
                                <a href="/products/details?id=<%= product._id %>">
                                    <button 
                                        style="width: 70px;" 
                                        class="edit-button">
                                        View
                                    </button>
                                </a>
                            </td>
                
                    
                            <td>
                                <button 
                                    style="width: 70px;" 
                                    class="list-button" 
                                    onclick="toggleListing('<%= product._id %>')">
                                    <%= product.isBlocked ? 'List' : 'Unlist' %>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
                
            </table>

            <div class="pagination">
                <ul>
               
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li><a href="/admin/products?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a></li>
                    <% } %>

                  
                </ul>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        function toggleListing(productId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You are about to change the product's listing .",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, continue',
        cancelButtonText: 'No, cancel',
        reverseButtons: true
    }).then((result) => {
        if (result.isConfirmed) {
          
            fetch(`/admin/products/toggle-block/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: data.message,
                        icon: 'success',
                        text: data.message,
                        confirmButtonText: 'OK'
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: data.message || 'An error occurred.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        window.location.reload(); 
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'An unexpected error occurred.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            });
        } else {
            
            Swal.fire({
                title: 'Cancelled',
                text: 'The action has been cancelled.',
                icon: 'info',
                confirmButtonText: 'OK'
            });
        }
    });
}



    </script>
</body>

</html>
