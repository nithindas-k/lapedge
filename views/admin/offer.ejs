<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Offers List</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #000000;
            color: #f5f5f5;
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .main-div {
            display: flex;
            flex-grow: 1;
            margin-top: 80px;
        }

        .hello {
            position: fixed;
            z-index: 2000;
            top: 0;
            left: 0;
            width: 250px;
            height: 100%;
        }

        .containerProduct {
            background-color: #0A0A0A;
            border-radius: 6px;
            margin-left: 250px;
            margin-top: 20px;
            padding: 40px;
            width: calc(100% - 250px);
            overflow-x: auto;
            flex-grow: 1;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .header h1 {
            font-size: 24px;
            font-weight: bold;
            color: #FFA000;
        }

        .add-offer-button {
            background-color: #FFA000;
            color: #1e1e1e;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold;
        }

        .add-offer-button:hover,
        .add-offer-button:focus {
            background-color: #FFA000;
            color: #1e1e1e;
            text-decoration: none;
            outline: none;
        }

        .offer-table {
            width: 100%;
            border-collapse: collapse;
        }

        .offer-table th,
        .offer-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #2b2b2b;
            word-wrap: break-word;
        }

        .offer-table th {
            background-color: #2b2b2b;
            font-weight: bold;
        }

        .offer-table tr:hover {
            background-color: #2b2b2b;
        }

        .edit-button,
        .delete-button {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 5px;
        }

        .edit-button {
            background-color: transparent;
            color: #ffa500;
            border: 1px solid orange;
        }

        .delete-button {
            background-color: transparent;
            color: #ff0000;
            border: 1px solid red;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .pagination ul {
            list-style: none;
            padding: 0;
            display: flex;
        }

        .pagination ul li {
            margin: 0 5px;
        }

        .pagination ul li a {
            color: #ffa500;
            padding: 8px 16px;
            text-decoration: none;
            background-color: #000000;
            border-radius: 4px;
            display: inline-block;
        }

        .pagination ul li a.active {
            background-color: #FFAB00;
            color: #1e1e1e;
        }

        .pagination ul li a:hover {
            background-color: #000000;
            color: #FFAB00;
        }

        .status-active {
            color: #00ff00;
        }

        .status-inactive {
            color: #ff0000;
        }
    </style>

    <div class="main-div">
        <%- include("../partials/adminNavbar") %>
            <div class="hello">
                <%- include('../partials/adminSidebar') %>
            </div>

            <div class="containerProduct">
                <div class="header">
                    <h1>Offers List</h1>
                    <a href="/offer/add" class="add-offer-button">Add Offer</a>
                </div>

                <table class="offer-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Offer Name</th>
                            <th>Type</th>
                            <th>Category/Product</th>
                            <th>Discount</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (offers && offers.length> 0) { %>
                            <% offers.forEach((offer, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= offer.name %>
                                    </td>
                                    <td>
                                        <%= offer.type %>
                                    </td>
                                    <td>
                                        <%= offer.categoryOrProduct.name %>
                                    </td>
                                    <% if (offer.discountType=="Fixed Amount" ) { %>
                                        <td>â‚¹<%= offer.discountValue %>
                                        </td>
                                        <% } else { %>
                                            <td>
                                                <%= offer.discountValue %>%
                                            </td>
                                            <% } %>
                                                <td>
                                                    <%= new Date(offer.startDate).toISOString().split('T')[0] %>
                                                </td>
                                                <td>
                                                    <%= new Date(offer.endDate).toISOString().split('T')[0] %>
                                                </td>
                                                <td>
                                                    <span>Active</span>
                                                </td>
                                                <td>
                                                    <button class="edit-button">
                                                        <a style="text-decoration: none; color: orange;"
                                                            href="offer/edit/<%= offer._id %>">Edit</a>
                                                    </button>
                                                </td>
                                                <td>
                                                    <button id="delete" class="delete-button"
                                                        data-id="<%= offer._id %>">
                                                        <a style="text-decoration: none; color: #ff0000;"
                                                            href="">Delete</a>
                                                    </button>
                                                </td>
                                </tr>
                                <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="10" style="text-align: center;">No offers available</td>
                                        </tr>
                                        <% } %>
                    </tbody>

                </table>





            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        document.querySelectorAll("#delete").forEach(btn => {
            btn.addEventListener("click", async function (event) {
                event.preventDefault();


                const id = event.target.getAttribute("data-id")
                const response = await fetch(`/offer/detele/${id}`, {
                    method: "DELETE",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({

                    })
                })

                const data = await response.json()
                if (data.success) {
                    await Swal.fire({
                        title: 'Are you sure?',
                        text: 'You won\'t be able to revert this!',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, delete it!',
                        cancelButtonText: 'Cancel'
                    })

                    location.reload()


                }
            })

        })

    </script>
</body>

</html>