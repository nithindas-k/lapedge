  <title>Shop</title>

  <style>



    
    
    

.container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .wallet-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .wallet-title {
            color: #1a1a1a;
            font-size: 24px;
            font-weight: 600;
        }

        .balance-card {
            background: linear-gradient(135deg, #2193b0, #6dd5ed);
            border-radius: 15px;
            padding: 30px;
            color: white;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .balance-label {
            font-size: 16px;
            margin-bottom: 10px;
            opacity: 0.9;
        }

        .balance-amount {
            font-size: 36px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .balance-actions {
            display: flex;
            gap: 15px;
        }

        .action-button {
            background-color: rgba(255, 255, 255, 0.2);
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background-color 0.3s;
        }

        .action-button:hover {
            background-color: rgba(255, 255, 255, 0.3);
        }

        .transactions-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .transactions-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .transactions-title {
            font-size: 20px;
            color: #1a1a1a;
            font-weight: 600;
        }

        .transaction-filters {
            display: flex;
            gap: 10px;
        }

        .filter-button {
            padding: 8px 15px;
            border: 1px solid #e0e0e0;
            border-radius: 20px;
            background: white;
            color: #666;
            cursor: pointer;
            transition: all 0.3s;
        }

        .filter-button.active {
            background: #2193b0;
            color: white;
            border-color: #2193b0;
        }

        .transaction-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .transaction-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            border-radius: 10px;
            background: #f8f9fa;
            transition: background-color 0.3s;
        }

        .transaction-item:hover {
            background: #f0f2f5;
        }

        .transaction-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .transaction-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .icon-credit {
            background: #28a745;
        }

        .icon-debit {
            background: #dc3545;
        }

        .transaction-details {
            display: flex;
            flex-direction: column;
        }

        .transaction-title {
            font-weight: 500;
            color: #1a1a1a;
        }

        .transaction-date {
            font-size: 14px;
            color: #666;
        }

        .transaction-amount {
            font-weight: 600;
        }

        .amount-credit {
            color: #28a745;
        }

        .amount-debit {
            color: #dc3545;
        }

        @media (max-width: 768px) {
            .balance-actions {
                flex-direction: column;
            }
            
            .transaction-filters {
                display: none;
            }
            
            .wallet-header {
                flex-direction: column;
                gap: 15px;
            }
        }
   
  </style>
</head>

<body style="background-color: #EFF2F1;">
  

  <main class="main">
