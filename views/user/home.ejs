              <li>Donec vitae odio quis nisl dapibus malesuada</li>
              <li>Donec vitae odio quis nisl dapibus malesuada</li>
            </ul>
            <p><a herf="#" class="btn">Explore</a></p>
          </div>
        </div>
      </div>
    </div>
    <!--=============== HOME ===============-->


    <!--=============== CATEGORIES ===============-->
    <section class="categories container section">
      <h3 class="section__title"><span>Popular</span> Categories</h3>
      <div class="categories__container swiper">
        <div class="swiper-wrapper row ">

          <% category.forEach((data)=>{ %>
            <div class=" col-md-3 ">
              <a href="/shop" class="category__item swiper-slide ">
                <img src="<%= data.image%>" alt="" class="category__img" />
                <h3 class="category__title">
                  <%= data.name %>
                </h3>
              </a>
            </div>
            <% }) %>



              <div class="swiper-button-prev">
                <i class="fi fi-rs-angle-left"></i>
              </div>
              <div class="swiper-button-next">
                <i class="fi fi-rs-angle-right"></i>
              </div>
        </div>
    </section>

    <!--=============== PRODUCTS ===============-->
    <section class="products container section">
      <div class="tab__btns">
        <!-- <span class="tab__btn active-tab" data-target="#featured"
                >Featured</span
              > -->
        <h3 class="section__title"><span>Best </span> Sellers</h3>
        <!-- <span class="tab__btn" data-target="#popular">Popular</span>
              <span class="tab__btn" data-target="#new-added">New Added</span> -->
      </div>

      <div class="tab__items">
        <div class="tab__item active-tab" content id="featured">
          <div class="products__container grid">
            <% product.forEach((data)=>{ %>
              <div class="product__item">
                <div class="product__banner">
                  <a href="/productDetails/<%= data._id %>" class="product__images">
                    <img src="<%= data.productImage[0] %>" alt="" class="product__img default" />
                    <img src="<%= data.productImage[1] %>" alt="" class="product__img hover" />
                  </a>
                  <div class="product__actions">
                    <a href="/productDetails/<%= data._id %>" class="action__btn" aria-label="Quick View">
                      <i class="fi fi-rs-eye"></i>
                    </a>
                    <a href="#" class="action__btn" aria-label="Add to Wishlist">
                      <i class="fi fi-rs-heart"></i>
                    </a>
                    <a href="/cart" class="action__btn" aria-label="Add to cart">
                      <i class="fi fi-rs-shopping-cart"></i>

                    </a>

                  </div>
                  <div class="product__badge light-pink">
                    <%=data.status %>
                  </div>
                </div>
                <div class="product__content">
                  <span class="product__category">
                    <%=data.category.name%>
                  </span>
                  <a href="details.html">
                    <h3 class="product__title">
                      <%= data.name %>
                    </h3>
                  </a>
                  <div class="product__rating">
                    <i class="fi fi-rs-star"></i>
                    <i class="fi fi-rs-star"></i>
                    <i class="fi fi-rs-star"></i>
                    <i class="fi fi-rs-star"></i>
                    <i class="fi fi-rs-star"></i>
                  </div>
                  <div class="product__price flex">
                    <span class="new__price">₹<%= data.salePrice %></span>
                    <span class="old__price">₹<%= data.regularPrice %></span>
                  </div>
                  <a href="#" class="action__btn cart__btn" aria-label="Add To Cart">
                    <i class="fi fi-rs-shopping-bag-add"></i>
                  </a>
                </div>
              </div>
              <% }) %>
          </div>
        </div>
      </div>
    </section>


    <!--=============== DEALS ===============-->


